<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/driverPhoto"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/trucklogo6" />

    <TextView
        android:id="@+id/dName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/driverPhoto"
        android:text="TextView" />

    <Button
        android:id="@+id/dSendInfo"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dName"
        android:layout_marginRight="16dp"
        android:background="@drawable/button_style"
        android:text="查看详情" />

    <TextView
        android:id="@+id/dType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dName"
        android:layout_below="@+id/dName"
        android:layout_marginTop="5dp"
        android:text="TextView" />

</RelativeLayout>